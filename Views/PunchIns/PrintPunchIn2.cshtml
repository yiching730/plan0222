@model IEnumerable<plan02.Models.PunchIn>

@{
    ViewData["Title"] = "PrintPunchIn2";
}
<!DOCTYPE html>
<html>
<head>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
</head>
<body>
    <h1 align="center">本月簽到退紀錄</h1>
    <input type="button" value="列印本月簽到退紀錄" class="btn btn-success" onClick="window.print()">


    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Year)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Month)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Day)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PunchIn1)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PunchOut)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Remark2)
                </th>
                 <th>
                    @Html.DisplayNameFor(model => model.Weekday)
                </th>
                <th>
                    時數
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Year)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Month)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Day)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PunchIn1)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PunchOut)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Remark2)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Weekday)
                    </td>
                    <td>
                        @(item.PunchOut - item.PunchIn1).DateTime.ToString("HH:mm")                      
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <script>

        function printDiv(divName) {

            var printContents = document.getElementById(divName).innerHTML;
            w = window.open();
            w.document.write(printContents);
            w.print();
            w.close();
        }
    </script>
</body>
</html>