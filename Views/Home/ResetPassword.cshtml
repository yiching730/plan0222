@model plan02.Models.AUser

@{
    ViewData["Title"] = "ResetPassword";
}

<div style="color: white;background-color: cornflowerblue;font-size: 30px">國立臺灣體育運動大學計畫人員管理系統-忘記密碼</div>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
</head>
<body>
    <div class="row">
        <div class="col-md-4">
            <form asp-controller="Home" asp-action="ResetPassword" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    請輸入帳號
                    @*<label asp-for="Aaccount" class="control-label"></label>*@
                    <input asp-for="Aaccount" class="form-control" id="UserId" />
                    <span asp-validation-for="Aaccount" class="text-danger"></span>
                    請輸入身分證字號
                   @* <label asp-for="Aidentity" class="control-label"></label>*@
                    <input asp-for="Aidentity" class="form-control" id="Useridentity" />
                    <span asp-validation-for="Aidentity" class="text-danger"></span>
                    請輸入新密碼
                    <input asp-for="Apassword" class="form-control" id="Useridentity" />
                    <span asp-validation-for="Apassword" class="text-danger"></span>
                </div>
                <input type="submit" class="btn btn-warning" value="重設密碼" onclick="return confirm('確定要修改嗎?')">    |
                @if (TempData.ContainsKey("Alert"))
                {
                    <script>alert('@TempData["Alert"]');</script>
                }
                <a asp-action="Login" class="btn btn-secondary">返回登入</a>

            </form>
        </div>
    </div>
</body>
</html>
