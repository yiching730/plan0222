@model IEnumerable<plan02.Models.BEmployee>


    @{
        ViewData["Title"] = "DemoViewAsPdf";
    }

    <h1>列印聘任資料</h1>

   
    <table class="table">
        <thead>
            <tr>
                <th>
                    姓名
                </th>
                <th>
                    助理人員類別
                </th>
                <th>
                    性別
                </th>
                <th>
                    電子信箱
                </th>
                <th>
                    薪資
                </th>
                <th>
                    起聘日
                </th>
                <th>
                    聘用結束日
                </th>
                <th>
                    創建時間
                </th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @item.BName
                </td>
                <td>
                    @item.BType
                </td>
                <td>
                    @item.BGender
                </td>
                <td>
                    @item.BMail
                </td>
                <td>
                    @item.BSalary
                </td>
                <td>
                    @item.BEmploymentDate.Value.ToString("D")
                </td>
                <td>
                    @item.BEmploymentDate2.Value.ToString("D")
                </td>
                <td>
                    @item.BCreatetime
                </td>
