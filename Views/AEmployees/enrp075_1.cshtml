<form asp-controller="Home" asp-action="enrp075_1" method="get">
    <table>
        <tr>
            <td>
                <label class="control-label">查詢學號</label>
                <input class="form-control" name="searchString" type="text" value="@ViewData["CurrentFilter"]" />
            </td>
        </tr>
    </table>
    <input type="submit" value="查詢" />
    @*<input type="button" asp-action="enrp075_1" class="bg-light" value="返回完整資料" />*@
</form>

<table>
    <tr>
        <td>
            <div>下載現有樣板檔案</div>
        </td>
        <td>
            <div class="col-lg-12">
                <form asp-action="cwtp_word_enrp075_1">
                    <div>學號: <input asp-for="STNO1" value="@ViewBag.stno1" class="form-control" readonly/></div>
                    <div>姓名: <input asp-for="CH_NAME1" value="@ViewBag.stno2" class="form-control" readonly/></div>
                    <div>系所: <input asp-for="TEACH_GROUP_NAME1" value="@ViewBag.stno3" class="form-control" readonly/></div>
                    <div>休學原因: <input asp-for="SUSPEND_DROPOUT_REASON1" value="@ViewBag.stno4" class="form-control"readonly /></div>
                    <div>休學學年度: <input asp-for="SUSPEND_DROPOUT_S_AYEAR1" value="@ViewBag.stno5" class="form-control"readonly /></div>
                    <div>休學學年期: <input asp-for="SUSPEND_DROPOUT_S_SMS1" value="@ViewBag.stno6" class="form-control" readonly/></div>
                    <div>休學訖止: <input asp-for="SUSPEND_DROPOUT_start1" type="date"class="form-control"/></div>
                    <div>
                        <div class="row">
                            @foreach (string format in Model.FormatMappingDictionary.Select(item => item.Key))
                            {
                                <div>
                                    <div class="form-check form-check-inline">
                                        <input asp-for="Format" class="form-check-input" type="radio" id="@format" value="@format">
                                        <label for="@format" class="form-check-label">@format</label>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="下載" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </td>
        <td>
            <div >下載修改後樣板檔案</div>
        </td>
        <td>
            <div class="col-lg-12">
                <form asp-action="ncwtp_word_enrp075_1">
